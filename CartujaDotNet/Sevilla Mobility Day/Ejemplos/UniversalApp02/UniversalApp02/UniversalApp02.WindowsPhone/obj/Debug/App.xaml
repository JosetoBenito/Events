<Application
    x:Class="UniversalApp02.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UniversalApp02"
    xmlns:locator="using:UniversalApp02.ViewModels.Base"
    xmlns:converter="using:UniversalApp02.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Colors.xaml" />
                <ResourceDictionary Source="Themes/Hub.xaml" />
                <ResourceDictionary Source="Themes/GridView.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ViewModelLocator -->
            <locator:ViewModelLocator x:Key="Locator" />

            <!-- Converters -->
            <converter:ImageConverter x:Key="ImageConverter" />
            
        </ResourceDictionary>
    </Application.Resources>
</Application>

