<Application
    x:Class="SilverlightApp.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:base="clr-namespace:SilverlightApp.ViewModels.Base">
    <!--Recursos de la aplicación-->
    <Application.Resources>
        <ResourceDictionary>
            <!-- ViewModelLocator -->
            <base:ViewModelLocator x:Key="Locator" />
        </ResourceDictionary>

        <local:LocalizedStrings xmlns:local="clr-namespace:SilverlightApp" x:Key="LocalizedStrings"/>
    </Application.Resources>

    <Application.ApplicationLifetimeObjects>
        <!--Objeto requerido que controla los eventos de duración de la aplicación-->
        <shell:PhoneApplicationService
            Launching="Application_Launching" Closing="Application_Closing"
            Activated="Application_Activated" Deactivated="Application_Deactivated"/>
    </Application.ApplicationLifetimeObjects>
</Application>