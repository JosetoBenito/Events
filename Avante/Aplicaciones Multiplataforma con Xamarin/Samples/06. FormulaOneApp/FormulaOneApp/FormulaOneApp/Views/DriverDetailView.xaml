<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:OxyPlot.Xamarin.Forms;assembly=OxyPlot.Xamarin.Forms"
             x:Class="FormulaOneApp.Views.DriverDetailView"
             BackgroundColor="{StaticResource WhiteColor}">
  <Grid>
    <ScrollView>
      <StackLayout>
        <Grid>
          <Image
            Source="{Binding Driver.CompleteName, Converter={StaticResource DriverNameToImageConverter}}"
            HeightRequest="600"
            Aspect="AspectFill"/>
          <Grid
            BackgroundColor="{StaticResource BlackColor}"
            VerticalOptions="End"
            Opacity="0.75">
            <Label
              Text="{Binding Driver.CompleteName}"
              FontSize="32"
              TextColor="{StaticResource WhiteColor}"
              XAlign="Center" />
          </Grid>
        </Grid>
        <Grid
          BackgroundColor="{StaticResource AccentColor}"
          VerticalOptions="Start">
          <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
          </Grid.ColumnDefinitions>
          <!-- Wins -->
          <StackLayout
            HorizontalOptions="Center">
            <StackLayout
              Orientation="Horizontal">
              <Label
                Text="{Binding Wins}"
                FontSize="42"
                YAlign="Center" />
              <Image
                WidthRequest="75">
                <Image.Source>
                  <FileImageSource File="Images/Icons/Wins.png" />
                </Image.Source>
              </Image>
            </StackLayout>
            <Label
              Text="Wins"
              YAlign="Center" />
          </StackLayout>
          <!-- Races -->
          <StackLayout
            Grid.Column="1"
            HorizontalOptions="Center">
            <StackLayout
              Orientation="Horizontal">
              <Label
                Text="{Binding Races}"
                FontSize="42"
                YAlign="Center" />
              <Image
                WidthRequest="75">
                <Image.Source>
                  <FileImageSource File="Images/Icons/Races.png" />
                </Image.Source>
              </Image>
            </StackLayout>
            <Label
              Text="Races"
              YAlign="Center" />
          </StackLayout>
        </Grid>
        <!-- Charts -->
      <forms:PlotView
        Model="{Binding PlotModel}"
        HeightRequest="500"
        WidthRequest="400"
        BackgroundColor="Transparent"
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand" />
      </StackLayout>
    </ScrollView>
  </Grid>
</ContentPage>