<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GeoPic.App"     
             xmlns:converters="clr-namespace:GeoPic.Converters;assembly=GeoPic">
  <Application.Resources>
    <ResourceDictionary>

      <!-- Converters -->
      <converters:InverseBoolConverter x:Key="InverseBoolConverter" />
      
      <!-- Colors -->
      <Color x:Key="PrimaryColor">#2196F3</Color>
      <Color x:Key="AccentColor">#FF4081</Color>
      
      <Style x:Key="PrimaryTextStyle" TargetType="Label">
        <Setter Property="VerticalOptions" Value="CenterAndExpand" />
        <Setter Property="TextColor" Value="Black" />
        <Setter Property="Font" Value="24" />
      </Style>
      
      <Style x:Key="SecondaryTextStyle" TargetType="Label"
             BasedOn="{StaticResource PrimaryTextStyle}">
        <Setter Property="TextColor" Value="Gray" />
      </Style>
      
    </ResourceDictionary>
  </Application.Resources>
</Application>